<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Поле для ввода сообщения -->
            <TextBox x:Name="MessageTextBox" Width="250" Height="30" Margin="10" />
            <Button Content="Отправить сообщение" Click="SendMessageButton_Click" Width="200" Margin="10"/>

            <!-- Поле для ввода номера телефона -->
            <TextBox x:Name="PhoneNumberTextBox" Width="250" Height="30" Margin="10" />
            <Button Content="Совершить звонок" Click="MakeCallButton_Click" Width="200" Margin="10"/>

            <!-- Поле для ввода email -->
            <TextBox x:Name="EmailTextBox" Width="250" Height="30" Margin="10" />
            <Button Content="Отправить письмо" Click="SendEmailButton_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
